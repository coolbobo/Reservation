<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_personage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	
	>
    
    <ImageView 
        android:id="@+id/about_background"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:src="@drawable/private_advertiment"
        android:scaleType="fitXY"
        />
    
    <RelativeLayout 
        android:id="@+id/about_personInformation"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:layout_marginTop="20dip"
        >
       	<ImageView 
       	    android:id="@+id/about_userImage"
       	    	  android:layout_width="80dip"
       	    	  android:layout_height="80dip"
       	    	  android:layout_centerVertical="true"
       	    	  android:src="@drawable/private_useinfimage"
       	    />
       	    
       <LinearLayout 
           android:id="@+id/about_information"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:layout_marginLeft="10dip"
           android:layout_toRightOf="@id/about_userImage"
           >
          	<TextView 
          	    android:id="@+id/about_title"
          	    android:layout_width="match_parent"
          	    android:layout_height="match_parent"
          	    android:layout_weight="1"
          	    android:text="一身何求"
          	    android:gravity="center_vertical"
          	    android:textColor="@color/red"
          	    />
          	
          	<TextView 
          	    android:id="@+id/about_description"
          	    android:layout_width="match_parent"
          	    android:layout_height="match_parent"
          	    android:layout_weight="1"
          	    android:text="一身何求"
          	    android:gravity="center_vertical"
          	    android:textColor="@color/red"
          	    />
          	
          	<TextView 
          	    android:id="@+id/about_position"
          	    android:layout_width="match_parent"
          	    android:layout_height="match_parent"
          	    android:layout_weight="1"
          	    android:text="一身何求"
          	    android:gravity="center_vertical"
          	    android:textColor="@color/red"
          	    />  
       </LinearLayout>

    </RelativeLayout>
    
    <!-- 透明区域 -->
    <RelativeLayout android:id="@+id/about_data"
        		android:layout_width="match_parent"
        		android:layout_height="50dip"
        		android:alpha="0.5"
        		android:background="@color/black"
        		android:layout_below="@id/about_personInformation"
        		android:layout_marginTop="30dip"
        		android:paddingLeft="20dip"
        		android:paddingRight="20dip"
        >
       
       <LinearLayout android:id="@+id/about_reveration1"
           		android:layout_width="60dip"
           		android:layout_height="match_parent"
           		android:orientation="vertical"
           		android:paddingTop="5dip"
           		android:paddingBottom="5dip"
           		
           >
          <TextView 
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:text="@string/about_revevation_01"
              android:textSize="12sp"
              android:textColor="@color/white"
              android:gravity="center"
              /> 	
            <TextView 
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:text="@string/about_revevation_06"
              android:gravity="center"
              android:textSize="15sp"
              android:textColor="@color/white"
              /> 
       </LinearLayout>
       <ImageView android:id="@+id/about_line1"
           		  android:layout_marginTop="5dip"
           		  android:layout_width="5dip"
           		  android:layout_height="40dip"
           		  android:layout_marginLeft="5dip"
           		  android:src="@drawable/about_line"
           		  android:layout_toRightOf="@id/about_reveration1"
           />
        
        
        <!-- 2 -->
         <LinearLayout android:id="@+id/about_reveration2"
           		android:layout_width="60dip"
           		android:layout_height="match_parent"
           		android:orientation="vertical"
           		android:paddingTop="5dip"
           		android:paddingBottom="5dip"
           		android:layout_toRightOf="@id/about_reveration1"
           		android:layout_marginLeft="10dip"
           >
          <TextView 
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:text="@string/about_revevation_02"
              android:textSize="12sp"
              android:textColor="@color/white"
              android:gravity="center"
              /> 	
            <TextView 
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:text="@string/about_revevation_07"
              android:gravity="center"
              android:textSize="15sp"
              android:textColor="@color/white"
              /> 
       </LinearLayout>
       <ImageView android:id="@+id/about_line2"
           		  android:layout_marginTop="5dip"
           		  android:layout_width="5dip"
           		  android:layout_height="40dip"
           		  android:src="@drawable/about_line"
           		  android:layout_toRightOf="@id/about_reveration2"
          		  android:layout_marginLeft="5dip"
           />
        
        
       <!-- 3 -->
         <LinearLayout android:id="@+id/about_reveration3"
           		android:layout_width="60dip"
           		android:layout_height="match_parent"
           		android:orientation="vertical"
           		android:paddingTop="5dip"
           		android:paddingBottom="5dip"
           		android:layout_toRightOf="@id/about_reveration2"
           		android:layout_marginLeft="10dip"
           >
          <TextView 
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:text="@string/about_revevation_03"
              android:textSize="12sp"
              android:textColor="@color/white"
              android:gravity="center"
              /> 	
            <TextView 
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:text="@string/about_revevation_08"
              android:gravity="center"
              android:textSize="15sp"
              android:textColor="@color/white"
              /> 
       </LinearLayout>
       <ImageView android:id="@+id/about_line3"
           		  android:layout_marginTop="5dip"
           		  android:layout_width="5dip"
           		  android:layout_height="40dip"
           		  android:src="@drawable/about_line"
           		  android:layout_toRightOf="@id/about_reveration2"
           		  android:layout_marginLeft="5dip"
           />
        
        
        
         <!-- 4 -->
         <LinearLayout android:id="@+id/about_reveration4"
           		android:layout_width="60dip"
           		android:layout_height="match_parent"
           		android:orientation="vertical"
           		android:paddingTop="5dip"
           		android:paddingBottom="5dip"
           		android:layout_toRightOf="@id/about_reveration3"
           		android:layout_marginLeft="10dip"
           >
          <TextView 
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:text="@string/about_revevation_04"
              android:textSize="12sp"
              android:textColor="@color/white"
              android:gravity="center"
              /> 	
            <TextView 
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:text="@string/about_revevation_09"
              android:gravity="center"
              android:textSize="15sp"
              android:textColor="@color/white"
              /> 
       </LinearLayout>
       <ImageView android:id="@+id/about_line4"
           		  android:layout_marginTop="5dip"
           		  android:layout_width="5dip"
           		  android:layout_height="40dip"
           		  android:src="@drawable/about_line"
           		  android:layout_toRightOf="@id/about_reveration3"
           		  android:layout_marginLeft="5dip"
           	/>
        
        
       
         <!-- 5 -->
         <LinearLayout android:id="@+id/about_reveration5"
           		android:layout_width="60dip"
           		android:layout_height="match_parent"
           		android:orientation="vertical"
           		android:paddingTop="5dip"
           		android:paddingBottom="5dip"
           		android:layout_toRightOf="@id/about_reveration4"
           		
           >
          <TextView 
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:text="@string/about_revevation_05"
              android:textSize="12sp"
              android:textColor="@color/white"
              android:gravity="center"
              /> 	
            <TextView 
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:text="@string/about_revevation_10"
              android:gravity="center"
              android:textSize="15sp"
              android:textColor="@color/white"
              /> 
       </LinearLayout>
       <ImageView android:id="@+id/about_line5"
           		  android:layout_marginTop="5dip"
           		  android:layout_width="5dip"
           		  android:layout_height="40dip"
           		  android:src="@drawable/about_line"
           		  android:layout_toRightOf="@id/about_reveration4"
          		  
           />
        
        
    </RelativeLayout>
    
    
    <RelativeLayout 
        android:id="@+id/about_dateinformation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/about_information"
        android:layout_below="@id/about_background"
        android:layout_marginTop="5dip"
       
        >
       
        
        <RelativeLayout android:id="@+id/about_top"
            			android:layout_width="match_parent"
            			android:layout_height="30dip"
            			android:layout_marginLeft="10dip"
            			android:layout_marginRight="10dip"
            >
            <LinearLayout android:id="@+id/about_reva"
                	    android:layout_width="100dip"
                	    android:layout_height="match_parent"
                	    android:orientation="horizontal"
                	   
                >
                <ImageView 
                    android:id="@+id/about_reva_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/myabout_revation"
                    android:layout_marginTop="5dip"
                    android:layout_marginLeft="5dip"
                   
                    />
                <TextView android:id="@+id/about_reva_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/myabout_revations"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="5dip"
                    />
            </LinearLayout>
            
            
            
             <LinearLayout android:id="@+id/about_cash"
                	    android:layout_width="100dip"
                	    android:layout_toRightOf="@id/about_reva"
                	    android:layout_height="match_parent"
                	    android:orientation="horizontal"
                	   
                >
                <ImageView 
                    android:id="@+id/about_love_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/myabout_shoufocus"
                    android:layout_marginTop="5dip"
                    android:layout_marginLeft="5dip"
                    />
                <TextView android:id="@+id/about_love_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/myabout_cashes"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="5dip"
                    />
            </LinearLayout>
            
             
              <LinearLayout android:id="@+id/about_love"
                	    android:layout_width="100dip"
                	    android:layout_height="match_parent"
                	    android:orientation="horizontal"
                	   
                		android:layout_toRightOf="@id/about_cash"
                >
                <ImageView 
                    android:id="@+id/about_cash_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/myabout_cash"
                    android:layout_marginTop="5dip"
                    android:layout_marginLeft="5dip"
                    />
                <TextView android:id="@+id/about_cash_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/myabout_shouchangitem"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="5dip"
                    />
            </LinearLayout>
        </RelativeLayout>
        
        
         <LinearLayout android:id="@+id/about_main"
             	      android:layout_below="@id/about_top"
            	      android:layout_width="match_parent"
            	      android:layout_height="match_parent"
            	      android:orientation="horizontal"
             >
            <ListView 
                android:id="@+id/about_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:dividerHeight="5dip"
                android:background="@color/white"
                >
                
            </ListView>
        </LinearLayout>
        
    </RelativeLayout>
</RelativeLayout>