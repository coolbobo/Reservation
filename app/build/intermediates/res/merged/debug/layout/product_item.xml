<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
	 <RelativeLayout
        android:id="@+id/shop_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="110dip"
        android:layout_marginBottom="10dip"
        android:background="@drawable/haricut_storelist"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/shop_image"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:scaleType="fitXY"
            android:src="@drawable/product"
            android:padding="1dip"
            android:background="@drawable/border"
             >
        </ImageView>

        <LinearLayout
            android:id="@+id/shop_item_introduce"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/shop_image"
            android:paddingLeft="8.0dip" 
           	android:layout_marginTop="5dip"
           	android:layout_marginBottom="5dip"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/shop_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/store_name_default"
                android:textColor="@color/title_color"
                android:textSize="@dimen/title_dimen" 
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/shop_product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/store_address_default"
                android:textSize="@dimen/content_dimen"
                 android:layout_weight="1"
                 />
            
            
            <TextView
                android:id="@+id/shop_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/store_address_default"
                android:textSize="@dimen/content_dimen" 
                 android:layout_weight="1"
                />
        </LinearLayout>
    </RelativeLayout>
	
</RelativeLayout>