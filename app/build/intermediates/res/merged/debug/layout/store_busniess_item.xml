<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/store_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/store_image"
            android:layout_width="40dip"
            android:layout_height="50dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:src="@drawable/haridressing_logo" >
        </ImageView>

        <RelativeLayout
            android:id="@+id/store_item_introduce"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/store_image"
            android:paddingLeft="4dip" >

            <TextView
                android:id="@+id/store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/store_name_default"
                android:textColor="@color/title_color"
                android:textSize="@dimen/title_dimen" />

            <TextView
                android:id="@+id/store_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/store_name"
                android:layout_marginTop="5dip"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/store_address_default"
                android:textSize="@dimen/content_dimen" />

            <ImageView
                android:id="@+id/store_star_level1"
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_toRightOf="@+id/store_address"
                android:layout_marginTop="10dip"
                android:layout_below="@+id/store_name"
                android:src="@drawable/haridressing_stares" >
            </ImageView>

            <ImageView
                android:id="@+id/store_star_level2"
                android:layout_width="10dip"
                android:layout_height="10dip"
                 android:layout_marginTop="10dip"
                android:layout_below="@+id/store_name"
                android:layout_toRightOf="@+id/store_star_level1"
                android:src="@drawable/haridressing_stares" >
            </ImageView>

            <ImageView
                android:id="@+id/store_star_level3"
                android:layout_width="10dip"
                android:layout_height="10dip"
                 android:layout_marginTop="10dip"
                android:layout_below="@+id/store_name"
                android:layout_toRightOf="@+id/store_star_level2"
                android:src="@drawable/haridressing_stares" >
            </ImageView>

            <ImageView
                android:id="@+id/store_star_level4"
                android:layout_width="10dip"
                android:layout_height="10dip"
                 android:layout_marginTop="10dip"
                android:layout_below="@+id/store_name"
                android:layout_toRightOf="@+id/store_star_level3"
                android:src="@drawable/haridressing_stares" >
            </ImageView>

            <ImageView
                android:id="@+id/store_star_level5"
                android:layout_width="10dip"
                android:layout_height="10dip"
                 android:layout_marginTop="10dip"
                android:layout_below="@+id/store_name"
                android:layout_toRightOf="@+id/store_star_level4"
                android:src="@drawable/haridressing_stares" >
            </ImageView>

            <ImageView
                android:id="@+id/store_Praise"
                android:layout_width="10dip"
                android:layout_height="10dip"
                 android:layout_marginTop="10dip"
                 android:layout_marginLeft="5dip"
                android:layout_below="@+id/store_name"
                android:layout_toRightOf="@+id/store_star_level5"
                android:src="@drawable/haridressing_heart" >
            </ImageView>

            <TextView
                android:id="@+id/store_PraiseCount"
                android:layout_width="40dip"
                android:layout_height="20dip"
                android:layout_marginLeft="5dip"
                 android:layout_marginTop="10dip"
                android:layout_below="@+id/store_name"
                android:layout_toRightOf="@id/store_Praise"

                android:text="(200)" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>






















































 